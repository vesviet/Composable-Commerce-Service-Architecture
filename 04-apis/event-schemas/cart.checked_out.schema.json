{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://api.company.com/schemas/events/cart.checked_out/v1.0.0",
  "title": "Cart Checked Out Event",
  "description": "Event published when shopping cart is converted to order",
  "type": "object",
  "required": ["eventType", "cartId", "orderId", "customerId", "totalAmount", "timestamp"],
  "properties": {
    "eventType": {
      "type": "string",
      "const": "orders.cart.checked_out",
      "description": "Event type identifier"
    },
    "cartId": {
      "type": "string",
      "format": "uuid",
      "description": "Shopping cart identifier"
    },
    "orderId": {
      "type": "string",
      "format": "uuid",
      "description": "Created order identifier"
    },
    "customerId": {
      "type": "string",
      "format": "uuid",
      "description": "Customer identifier"
    },
    "totalAmount": {
      "type": "number",
      "minimum": 0,
      "description": "Total order amount"
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$",
      "default": "USD",
      "description": "ISO 4217 currency code"
    },
    "itemCount": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of items in cart"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when checkout completed"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}

