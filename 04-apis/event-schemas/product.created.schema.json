{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://api.company.com/schemas/events/product.created/v1.0.0",
  "title": "Product Created Event",
  "description": "Event published when a new product is created in the catalog",
  "type": "object",
  "required": ["eventType", "productId", "sku", "name", "timestamp"],
  "properties": {
    "eventType": {
      "type": "string",
      "const": "catalog.product.created",
      "description": "Event type identifier"
    },
    "productId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique product identifier"
    },
    "sku": {
      "type": "string",
      "description": "Stock Keeping Unit identifier"
    },
    "name": {
      "type": "string",
      "description": "Product name"
    },
    "categoryId": {
      "type": "string",
      "format": "uuid",
      "description": "Category identifier"
    },
    "brandId": {
      "type": "string",
      "format": "uuid",
      "description": "Brand identifier (optional)"
    },
    "manufacturerId": {
      "type": "string",
      "format": "uuid",
      "description": "Manufacturer identifier (optional)"
    },
    "status": {
      "type": "string",
      "enum": ["ACTIVE", "INACTIVE", "DRAFT"],
      "description": "Product status"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when product was created"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}

