{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://api.company.com/schemas/events/shipment.created/v1.0.0",
  "title": "Shipment Created Event",
  "description": "Event published when a shipment is created for order fulfillment",
  "type": "object",
  "required": ["eventType", "shipmentId", "orderId", "status", "timestamp"],
  "properties": {
    "eventType": {
      "type": "string",
      "const": "shipping.shipment.created",
      "description": "Event type identifier"
    },
    "shipmentId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique shipment identifier"
    },
    "orderId": {
      "type": "string",
      "format": "uuid",
      "description": "Associated order identifier"
    },
    "carrierId": {
      "type": "string",
      "format": "uuid",
      "description": "Shipping carrier identifier"
    },
    "carrierName": {
      "type": "string",
      "enum": ["UPS", "FEDEX", "DHL", "USPS", "CUSTOM"],
      "description": "Shipping carrier name"
    },
    "trackingNumber": {
      "type": "string",
      "description": "Carrier tracking number"
    },
    "status": {
      "type": "string",
      "enum": ["PENDING", "READY", "PICKED_UP", "IN_TRANSIT", "DELIVERED", "FAILED"],
      "description": "Shipment status"
    },
    "warehouseId": {
      "type": "string",
      "format": "uuid",
      "description": "Warehouse where shipment originates"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when shipment was created"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}

